{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "store/*": [
        "src/store/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "jsx": "react",
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "../node_modules/@types",
      "../TStypes"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "**/*.js",
    "**/*.jsx",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.jsx",
    "**/*.test.tsx",
  ]
}